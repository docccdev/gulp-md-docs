.doc-content
    width: 80%
    margin-left: auto
    margin-right: auto
    background: #fff
    padding: 40px
    box-sizing: border-box
    font-size: 15px
    font-weight: 300

    a
        color: #0f6ecd

        &:hover
            text-decoration: underline

    ul
        margin-bottom: 50px

    li
        display: block
        padding-left: 20px
        position: relative
        margin: 10px 0

        &:before
            position: absolute
            margin-left: -20px
            width: 20px
            text-align: center
            content: '\2014'
